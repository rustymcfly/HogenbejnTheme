
{% block layout_header_logo_inner %}
    <div class="header-logo-main">
        {% block layout_header_logo_link %}
            <a class="header-logo-main-link"
               href="{{ path('frontend.home.page') }}"
               title="{{ "header.logoLink"|trans|striptags }}">
                {% block layout_header_logo_image %}
                    <div class="header-logo-picture">
                        {% set assetUrl = asset('/assets/images/logo_ohne_animation.svg', 'theme') %}

                        {{ fileGetContents(assetUrl|replace({ (app.request.schemeAndHttpHost) : ''})|split('?')[0])|raw }}
                    </div>
                {% endblock %}
            </a>
        {% endblock %}
    </div>
{% endblock %}
